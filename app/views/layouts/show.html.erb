<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @layout.name %></h1>
  <br/><br/>
  <p><%= @layout.description %></p>
  <div class="pull-right">
    <% if current_user && current_user == @layout.user %>
        <%= link_to 'Edit', edit_layout_path(@layout), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', layout_path(@layout), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

<div class="clear"></div>


<h1>Comments</h1>

<% @layout.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6">
    <blockquote>
        <%= comment.message %>
    </blockquote>
  </div>
<% end %>


<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add a comment
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @comment, url: layout_comments_path(@layout) do |f| %>
          <%= f.input :message %>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
          <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>
</div>



<div class="clear"></div>


